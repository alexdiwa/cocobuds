<div>
    <ul>
    <% @messages.each do |message| %>
        <% if message.body %>
        <li>
            <p><%= message.user.first_name %> <%= message.user.last_name %></p>
            <p><%= message.body %></p>
        </li>
        <% end %>
    <% end %>
    </ul>

    <%= form_for [@conversation, @message] do |f| %>
    <div class="field">
        <%= f.text_area :body, placeholder: "Your message" %>
    </div>

    <%= f.submit "Send" %>
    <% end %>
</div>