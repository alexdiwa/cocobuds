<div class="container w-75 m-auto pb-5">
    <% @messages.each do |message| %>
        <% if message.body %>
            <% if current_user.id == message.user_id %>
                <div class="card p-3 text-right mb-5 w-75 ml-auto">
                    <div class="card-body row align-items-center pt-1">
                        <div class="col-md-10 small text-muted p-0">
                            <span>
                            <%= link_to user_path(message.user_id) do %><%= message.user.first_name %> <%= message.user.last_name %><% end %>
                            </span><br>
                            <span><%= message.created_at.strftime("%l:%M %p on %a %d %b '%y") %></span>
                        </div>
                        <div class="col-md-2 p-0">
                            <div class="circle msg filtered">
                                <%= image_tag message.user.picture if message.user.picture.attached? %>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card-body col-md-12 pb-1 small">
                            <span><%= message.body %></span>
                        </div>
                    </div>
                </div>
            <% else %>
                <div class="card p-3 mb-5 w-75 mr-auto">
                    <div class="card-body row align-items-center pt-1">
                        <div class="col-md-2 p-0">
                            <div class="circle msg filtered">
                                <%= image_tag message.user.picture if message.user.picture.attached? %>
                            </div>
                        </div>
                        <div class="col-md-10 small text-muted p-0">
                            <span>
                            <%= link_to user_path(message.user_id) do %><%= message.user.first_name %> <%= message.user.last_name %><% end %>
                            </span><br>
                            <span><%= message.created_at.strftime("%l:%M %p on %a %d %b '%y") %></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card-body col-md-12 pb-1 small">
                            <span><%= message.body %></span>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    <% end %>

    <%= form_for [@conversation, @message] do |f| %>
        <div class="form-group">
            <%= f.text_area :body, autofocus: true, placeholder: "Say something nice!", class: "form-control", rows: 5 %>
        </div>
        <div class="mb-3 form-group text-center">
            <%= f.submit "Send", class: "btn btn-primary btn-default btn-block" %>
        </div>
    <% end %>
</div>