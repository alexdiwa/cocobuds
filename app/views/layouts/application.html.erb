<!DOCTYPE html>
<html>
  <head>
    <title>RailsAssessment</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://js.stripe.com/v3/"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-md bg-light navbar-light fixed-top">
      <%= link_to "Cocobuds", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item my-auto">
                <%= link_to "Browse", users_path, class: "nav-link" %>
              </li>
              <li class="nav-item my-auto">
                <%= link_to "Favourites", "#", class: "nav-link" %>
              </li>
              <li class="nav-item my-auto">
                <%= link_to conversations_path, class: "nav-link" do %>Messages<span class="ml-1 p-1 pl-2 pr-2 small btn-default-sm notification <%= "d-none" if @total_unread == 0 %>"><%= @total_unread %></span><% end %>
              </li> 
              <li class="nav-item my-auto">
                <%= link_to "Donate", "/pages/donate", class: "nav-link" %>
              </li>
              <li class="nav-item dropdown my-auto">
                <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <div class="circle msg filtered m-0 p-0" aria-labelledby="navbarDropdown">
                    <%= image_tag current_user.picture if current_user.picture.attached? %>
                  </div>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "View Profile", user_path(current_user.id), class: "dropdown-item small" %>
                  <%= link_to "Edit Profile", edit_user_path(current_user.id), class: "dropdown-item small"%>
                  <%= link_to "Account Settings", edit_user_registration_path, class: "dropdown-item small"%>
                  <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "dropdown-item small" ) %>    
                </div>
              </li>              
            <% else %>
              <li class="nav-item">
                <%= link_to('Login', new_user_session_path, class: "nav-link")  %>  
              </li>
            <% end %>
        </ul>
      </div>
    </nav>
    <div class="mt-5 pt-5 container">
      <% if notice %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= notice %>
        </div>
      <% elsif alert %>
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= alert %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
