<h1>Users</h1>

  <%= form_with url: users_path, method: :get, local: true do |form| %>
    <div class="form-group">
        <%= form.label :location %>
        <%= form.select(:location, options_for_select( @locations, params[:location] ), {}, {class: "form-control form-control-sm"}) %>
    </div>
    <div class="form-group">
        <%= form.label :role, "Developer/Designer?" %>
        <%= form.select(:role, options_for_select( @roles, params[:role] ), {}, {class: "form-control form-control-sm"}) %>
    </div>
    <div class="form-actions">
      <% @skills.each do |skill| %>
        <input class="checkbox" type="checkbox" name="skills[]" id="<%= skill.id %>" value="<%= skill.id %>"> <label for="<%= skill.id %>"><%= skill.name %></label>
      <% end %>
    </div>
    <div class="form-actions">
     <%= form.submit 'Search', class: "btn btn-success" %>
    </div>
  <% end %>

<%= render 'search_results' %>