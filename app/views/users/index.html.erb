<div class="w-100">
  <div class="row">
    <div class="mb-5 col-lg-4">
      <%= form_with url: users_path, method: :get, local: true do |form| %>
        <div class="form-group">
            <%= form.label :location, class: "sr-only" %>
            <%= form.select(:location, options_for_select( @locations, params[:location] ), {include_blank: 'Location'}, {class: "form-control form-control-sm"}) %>
        </div>
        <div class="form-group">
            <%= form.label :role, "Developer or Designer?", class: "sr-only" %>
            <%= form.select(:role, options_for_select( @roles, params[:role] ), {include_blank: 'Developer or Designer?'}, {class: "form-control form-control-sm"}) %>
        </div>
         <button class="btn btn-outline-primary btn-default btn-block btn-sm" type="button" data-toggle="collapse" data-target="#skills" aria-expanded="false" aria-controls="skills">
          Filter by skills
        </button>
        <div class="mt-3 form-actions collapse" id="skills">
          <div class="row">
          <div class="col">
          <% @skills.each_with_index do |skill, i| %>
            <% if i == (@skills.length / 2) - 1 %>
          </div>
          <div class="col">
            <% end %>
            <input class="checkbox mr-1" type="checkbox" name="skills[]" id="<%= skill.id %>" value="<%= skill.id %>"> <label for="<%= skill.id %>"><%= skill.name %></label><br>
          <% end %>
          </div>
          </div>
        </div>
        <div class="mb-3 form-group text-center">
        <%= form.submit 'Search', class: "mt-3 w-100 btn btn-primary btn-default btn-blocks" %>
        </div>
      <% end %>
    </div>
    <div class="mb-5 col-lg-8">
      <%= render 'search_results' %>
    </div>
  </div>
</div>