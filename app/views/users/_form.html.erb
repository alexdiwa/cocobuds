<div class="container">
  <% if user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="w-75 text-left m-auto">
  <%= form_with model: user, local: true do |form| %>
    <div class="form-group row">
      <div class="col-md-6">
        <%= form.label :picture, "Upload a profile picture" %>
      </div>
      <div class="col-md-6">
        <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-6 mb-2">
        <%= form.label :first_name, class: "sr-only" %>
        <%= form.text_field :first_name, placeholder: "First Name", class: "form-control", :required => true %>
      </div>
      <div class="col-md-6 mb-2">
        <%= form.label :last_name, class: "sr-only" %>
        <%= form.text_field :last_name, placeholder: "Last Name", class: "form-control", :required => true %>
      </div>
    </div>

    <fieldset class="form-group">
      <div class="row">
        <legend class="col-form-label pt-0 sr-only">I'm a</legend>
        <% roles.each do |option| %>
          <div class="form-check col-md-6">
              <%= form.radio_button :role, option, class: "mr-2" %>
              <%= form.label "role_#{option}".to_sym, "I'm a #{option}", :required => true, class: "form-check-label" %>
          </div>
        <% end %>
      </div>
    </fieldset>
    <div class="form-group row">
      <div class="col-md-6">
        Skills
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-4">
      <% @skills.each_with_index do |skill, i| %>
          <% if @selected_skills.include?(skill.name) %>
            <input class="checkbox mr-2" type="checkbox" name="skills[]" id="<%= skill.id %>" value="<%= skill.id %>" checked> <label for="<%= skill.id %>"><%= skill.name %></label><br>
          <% else %>
            <input class="checkbox mr-2" type="checkbox" name="skills[]" id="<%= skill.id %>" value="<%= skill.id %>"> <label for="<%= skill.id %>"><%= skill.name %></label><br>
          <% end %>
        <% if i == 5 or i == 11 %>
          </div>
          <div class="col-md-4">
        <% end %>
      <% end %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-md-2">
        <%= form.label :age, class: "sr-only" %>
        <%= form.number_field :age, placeholder: "Age", class: "form-control mb-2" %>
      </div>
      <div class="col-md-5">
        <%= form.label :occupation, class: "sr-only" %>
        <%= form.text_field :occupation, placeholder: "Occupation", class: "form-control mb-2"  %>
      </div>
      <div class="col-md-5 form-group">
        <%= form.label :location_id, class: "sr-only" %>
        <%= form.select(:location_id, locations.map{ |location| [location.name, location.id] }, {include_blank: 'Pick a Location'}, {required: true, class: "form-control form-control-md"}) %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-5">
        <%= form.label :portfolio_url, class: "sr-only" %>
        <%= form.url_field :portfolio_url, placeholder: "Website", class: "form-control mb-2" %>
      </div>
    </div>

    <div class="form row">
      <div class="col-md-12">
        <%= form.label :bio, class: "sr-only" %>
        <%= form.text_area :bio, placeholder: "About me", class: "form-control mb-2" %>
      </div>
    </div>

    <div class="mb-3 form-group text-center">
      <%= form.submit "Save", class: "mt-3 w-100 btn btn-primary btn-default btn-blocks" %>
    </div>


  <% end %>
  </div>
</div>