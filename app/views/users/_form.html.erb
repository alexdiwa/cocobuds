
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_with model: user, local: true do |form| %>
    <div>
      <%= form.label :first_name %>
      <%= form.text_field :first_name %>
    </div>
    <div>
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>
    </div>

    <% roles.each do |option| %>
      <div>
      <%= form.radio_button :role, option %>
      <%= form.label "role_#{option}".to_sym, option %>
      </div>
    <% end %>

    <div>
      <%= form.label :age %>
      <%= form.number_field :age %>
    </div>

    <div>
      <%= form.label :occupation %>
      <%= form.text_field :occupation %>
    </div>

    <div>
      <%= form.label :company %>
      <%= form.text_field :company %>
    </div>

    <div>
      <%= form.label :location_id %>
      <%= form.select(:location_id, locations.map{ |location| [location.name, location.id] }) %>
    </div>

    <div>
      <%= form.label :portfolio_url %>
      <%= form.url_field :portfolio_url %>
    </div>

    <div>
      <%= form.label :bio %>
      <%= form.text_area :bio %>
    </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
