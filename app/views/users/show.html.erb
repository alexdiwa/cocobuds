<div class="w-75 m-auto pt-5">
  <div class="row">
    <div class="mb-5 col-md-4">
      <div class="circle">
        <%= image_tag @user.picture if @user.picture.attached? %>
      </div>
      <p>
        <span class="font-weight-bold"><%= @user.first_name %> <%= @user.last_name %></span> <%= "/ #{@user.age}" unless @user.age.blank? %><br>
        <%= @user.role.capitalize %><br>
        <%= @user.occupation %><br>
        <%= @location.name %>
      </p>
      <p>
        <%= link_to "Message", conversations_path(sender_id: current_user.id, receiver_id: @user.id), method: :post %><br>
        <a href="<%= @user.portfolio_url %>" target="_blank">Website</a>
      </p>

    </div>
    <div class="mb-5 col-md-8">
        <strong>About Me</strong>
        <p>
          <%= @user.bio %>
        </p>
      
      <div class="card-columns row p-2">
        <% @user.skills.each do |skill| %>
          <div class="card w-auto p-2 pl-3 pr-3 m-1 small btn-default-sm">
            <%= skill.name %>
          </div>
        <% end %>
      </div>
      <p class="mt-5 text-right">
        <% if @user.id == current_user.id %>
        <%= link_to 'Edit', edit_user_path(@user) %> /
        <% end %>
        <%= link_to 'Back', users_path %>
      </p>
    </div>
